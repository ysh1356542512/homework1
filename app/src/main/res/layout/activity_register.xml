<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background">
    <RelativeLayout
        android:id="@+id/register_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/register_moon"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sb"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="300dp"
            android:alpha="0.7"/>
        <ImageView
            android:id="@+id/register_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_left_back"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:alpha="0.7"
            android:clickable="true"
            android:onClick="onClick"/>
        <TextView
            android:id="@+id/register_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主界面"
            android:alpha="0.7"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/register_left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="56dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/register_body"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:layout_below="@+id/login_Top"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:alpha="0.7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/bg_btn2">
            <ImageView
                android:id="@+id/register_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login2"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:alpha="1.0"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:id="@+id/register_userNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号/邮箱/用户名"
                android:textColorHint="#FFF"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:maxLength="20"
                android:textStyle="italic"
                android:alpha="0.8"
                android:maxLines="1"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/bg_btn2">
            <ImageView
                android:id="@+id/register_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/password"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:alpha="1.0"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:id="@+id/register_passwordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="设置密码"
                android:textColorHint="#FFF"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:maxLength="10"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textStyle="italic"
                android:alpha="0.8"
                android:maxLines="1"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/bg_btn2">
            <ImageView
                android:id="@+id/register_password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/password"
                android:textColor="#FFFFFF"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:alpha="1.0"
                android:layout_marginLeft="15dp"/>
            <EditText
                android:id="@+id/register_passwordText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="确认密码"
                android:textColorHint="#FFF"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="italic"
                android:alpha="0.8"
                android:maxLines="1"
                android:maxLength="10"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textPassword"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp">
            <CheckBox
                android:id="@+id/register_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_btn3"
                android:alpha="1.0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同意用户协议"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="5dp"/>
            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_marginLeft="110dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="显示密码"
                android:button="@drawable/bg_btn3"
                android:textColor="#FFF"/>
        </LinearLayout>
        <Button
            android:id="@+id/register_register"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_btn4"
            android:text="注册"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有账号?"
                android:textSize="15dp"
                android:textColor="#FFF"
                android:layout_marginLeft="95dp"/>
            <TextView
                android:id="@+id/register_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请登录"
                android:textColor="#FFF"
                android:textSize="15dp"
                android:layout_marginLeft="5dp"
                android:clickable="true"
                android:onClick="onClick"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/register_1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>